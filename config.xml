cd .<?xml version='1.0' encoding='utf-8'?>
<widget id="com.newyorklife.mentorme" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MentorMe</name>
    <description>
        Mentorship app for New York Life
    </description>
    <author email="dev@mentorme.newyorklife.com" href="http://newyorklife.com">
        The Apptastic Four
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="scripts/build.sh" type="before_prepare" />
	<platform name="android">
        <icon src="platforms/android/res/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="platforms/android/res/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="platforms/android/res/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="platforms/android/res/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="platforms/android/res/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
</widget>
